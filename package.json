{
  "name": "Ritoplz",
  "description":
    "Worldwide Rankings for League of Legends. See who's the best player in your region.",
  "version": "3.0.0",
  "repository": {
    "url": "https://github.com/ritoplz/ritoplz.git",
    "type": "git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "keywords": ["league of legends", "LoL", "Rankings", "Ritoplz"],
  "scripts": {
    "dev": "node server.js",
    "build": "next build && node ./scripts/default-lang",
    "start": "NODE_ENV=production node server.js",
    "precommit": "lint-staged",
    "test": "xo"
  },
  "dependencies": {
    "accepts": "^1.3.4",
    "babel-plugin-react-intl": "^2.3.1",
    "glob": "^7.1.2",
    "intl": "^1.2.5",
    "next": "^11.1.3",
    "nprogress": "^0.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.1",
    "react-intl": "^2.4.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "xo": "^0.18.2"
  },
  "babel": {
    "presets": ["next/babel"],
    "env": {
      "development": {
        "plugins": ["react-intl"]
      },
      "production": {
        "plugins": [
          [
            "react-intl",
            {
              "messagesDir": "lang/.messages/"
            }
          ]
        ]
      }
    }
  },
  "xo": {
    "extends": ["prettier", "prettier/react", "plugin:react/recommended"],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/display-name": 0,
      "no-prototype-builtins": 0,
      "react/prop-types": 0
    },
    "globals": ["window"],
    "ignores": ["static/*.js", "next.config.js"]
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  },
  "now": {
    "name": "ritoplz",
    "alias": "ritoplz.com",
    "env": {
      "NODE_ENV": "production"
    },
    "dotenv": ".env.production"
  }
}
